    "@balena/jellyfish-environment": "^4.2.8",
    "@balena/jellyfish-plugin-default": "^19.7.13",
    "@balena/jellyfish-plugin-product-os": "^2.5.0",
    "@balena/jellyfish-test-harness": "^6.1.0",
    "@balena/jellyfish-types": "^0.9.8",
    "@balena/lint": "^6.1.1",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/lru-cache": "^5.1.1",
    "@types/uuid": "^8.3.1",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "nock": "^13.1.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.6.1",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.21.6",
    "uuid": "^8.3.2"
  },
