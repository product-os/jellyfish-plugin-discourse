{
  "name": "@balena/jellyfish-plugin-discourse",
  "description": "Discourse Jellyfish Plugin",
  "version": "6.0.48",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-plugin-discourse"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && deplint",
    "lint:fix": "balena-lint --fix lib test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest test/unit",
    "test:integration": "npx jest --runInBand --bail test/integration",
    "test:compose": "docker build -t balena/jellyfish-sut:latest . && docker-compose -f docker-compose.test.yml -f docker-compose.yml up --exit-code-from=sut",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "compose": "docker-compose up"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.2.60",
    "@balena/jellyfish-worker": "^33.0.38",
    "autumndb": "^22.1.28",
    "bluebird": "^3.7.2",
    "lodash": "^4.17.21",
    "lru-cache": "^7.14.0"
  },
  "devDependencies": {
    "@balena/jellyfish-environment": "^13.0.4",
    "@balena/lint": "^6.2.0",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^29.0.0",
    "@types/lodash": "^4.14.184",
    "@types/lru-cache": "^7.10.9",
    "@types/uuid": "^8.3.4",
    "axios": "^0.27.2",
    "deplint": "^1.1.3",
    "jest": "^29.0.2",
    "lint-staged": "^13.0.3",
    "nock": "^13.2.9",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.23.14",
    "typescript": "^4.8.3",
    "uuid": "^8.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2022-09-10T04:43:43.135Z"
  }
}
